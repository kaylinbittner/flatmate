<div class="container">
  <div class="row">
    <% @flats.each do |f| %>
    <div class="col-xs-12 col-sm-4">
      <%= link_to flat_path(f) do %>
      <div class="card">
        <div class="card-city"> <%= f.city %> </div>
        </div>
        <div class="card-description"> <%= f.key_description %> </div>
        </div>
        <div class="card-rating"> <% (f.average_rating).times do %>
          <i class="fas fa-star" style="color: #ffb400"></i>
        <% end %>
        <% (5 - f.average_rating).times do %>
          <i class="far fa-star" style="color: #ffb400"></i>
        <% end %>
        </div>
        </div>
        <% end %>
      </div>
       <% end %>
    </div>
  </div>
</div>
