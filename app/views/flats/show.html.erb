<%= render 'picture_carousel', flat: @flat %>

<% owner = User.find(@flat.user_id) %>

<div class="flat-details">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-1">
      <div class="header-flat-details">
        <div class="flat-owner-info">
          <%= image_tag 'kaylinbittner-avatar.jpeg', class: "img-circle" %>
          <p><%= owner.first_name.capitalize %> <%= owner.last_name.capitalize %></p>
        </div>
        <div class="flat-description">
          <h1><%= @flat.key_description %></h1>
          <p><%= @flat.city %>, <%= @flat.country %></p>
          <p class="rating">
            <% if @flat.average_rating != nil %>
              <% (@flat.average_rating).times do %>
                <i class="fas fa-star" style="color: #ffb400"></i>
              <% end %>
              <% (5 - @flat.average_rating).times do %>
                <i class="far fa-star" style="color: #ffb400"></i>
              <% end %>
            <% end %>
          </p>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <form action="#">
        <h4>Book this flat</h3>
          <div class="form-group">
            <div class="row">
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkin" id="checkin">
              </div>
              <div class="col-xs-6">
                <input type="text" class="form-control" placeholder="checkout">
              </div>
            </div>
          </div>
          <div class="form-group">
            <select name="" id="guests" class="form-control">
              <option value="1">1 guest</option>
              <option value="2">2 guests</option>
              <option value="3">3 guests</option>
              <option value="3">4 guests</option>
              <option value="3">5 guests</option>
            </select>
          </div>
          <%= link_to "Book it", my_profile_path, class: "btn btn-danger", type: "submit", style: "width: 100%" %>
        </form>
      </div>
    </div>
    <div class="description-details">
      <div class="container">
        <div class="row" id="flat-data">
          <div class="col-xs-12 col-sm-10 col-sm-offset-1">
            <h2>About this flat</h2>
            <p><%= @flat.description %></p>
            <div class="row">
              <div class="col-xs-12 col-sm-2">Amenities</div>
              <div class="col-xs-12 col-sm-4">
                <ul class="list-unstyled">
                  <% if @flat.kitchen == true %>
                    <li>
                      <i class="fas fa-utensils"></i>
                      <strong>Kitchen</strong>
                    </li>
                  <% end %>
                  <% if @flat.dishwasher == true %>
                    <li>
                      <i><%= image_tag 'dishwasher.png', style: "width: 20px"%></i>
                      <strong>Dishwasher</strong>
                    </li>
                  <% end %>
                  <% if @flat.wifi == true %>
                    <li>
                      <i class="fas fa-wifi"></i>
                      <strong>Wifi</strong>
                    </li>
                  <% end %>
                  <% if @flat.tv == true %>
                    <li>
                      <i class="fas fa-tv"></i>
                      <strong>TV</strong>
                    </li>
                  <% end %>
                  <% if @flat.allows_pets == true %>
                    <li>
                      <i class="fas fa-paw"></i>
                      <strong>Pets</strong>
                    </li>
                  <% end %>
                  <% if @flat.handicap == true %>
                    <li>
                      <i class="fas fa-wheelchair"></i>
                      <strong>handicap accessible</strong>
                    </li>
                  <% end %>
                  <% if @flat.balcony == true %>
                    <li>
                      <i><%= image_tag 'balcony.png', style: "width: 20px"%></i>
                      <strong>Balcony</strong>
                    </li>
                  <% end %>
                  <% if @flat.smoking == true %>
                    <li>
                      <i class="fas fa-smoking"></i>
                      <strong>Smoking</strong>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
