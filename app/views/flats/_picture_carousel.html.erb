<div id="pictureCarousel" class="carousel slide" data-ride="carousel" data-interval="2000" data-pause="hover">
  <ol class="carousel-indicators">
    <% @flat.pictures.each_with_index do |picture, index| %>
      <% if index == 0 %>
        <li data-target="#pictureCarousel" data-slide-to=<% index %> class="active"></li>
      <% else %>
        <li data-target="#pictureCarousel" data-slide-to=<% index %>></li>
      <% end %>
    <% end %>
  </ol>
  <div class="carousel-inner" >
    <% @flat.pictures.each_with_index do |picture, index| %>
      <% if index == 0 %>
        <div class="carousel-item active">
          <%= image_tag picture.url, class: "d-block w-100", alt: "#{index} picture" %>
        </div>
      <% else %>
        <div class="carousel-item">
          <%= image_tag picture.url, class: "d-block w-100", alt: "#{index} picture" %>
        </div>
      <% end %>
    <% end %>
  </div>
   <a class="carousel-control-prev" href="#pictureCarousel" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#pictureCarousel" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
